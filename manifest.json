{
  "manifest_version": 3,
  "name": "Distill: Focus Extension",
  "version": "1.0.0",
  "description": "Block distracting websites or specific content to create a focused, distraction-free browsing experience.",
  "icons": {
    "16": "./assets/images/logo_16x.png",
    "48": "./assets/images/logo_48x.png",
    "128": "./assets/images/logo_128x.png"
  },
  "action": {
    "default_popup": "./src/popup.html"
  },
  "permissions": ["activeTab", "storage", "webNavigation"],
  "background": {
    "service_worker": "./src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["<all_urls>"]
}
